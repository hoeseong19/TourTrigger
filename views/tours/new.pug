extends ../layout

block content
  form(action="/tours", method="POST")
    .container.my-5
      //- title
      div(class="form-group")
        label(for="title") Title
        input.form-control(type="text", name="title", value=tour.title)
      //- description
      div(class="form-group")
        label(for="description") Description
        textarea.form-control(class="summernote", name="description", rows="5")= tour.description
      //- courses
      div(class="form-group")
        label(for="course") Course
        input.form-control(type="text", name="course", value=tour.course)
        ul(class="list-group list-group-flush w-25") 
          li(class="list-group-item") Cras justo odio #[i(class="far fa-times")]
          li(class="list-group-item") Dapibus ac facilisis in
          li(class="list-group-item") Morbi leo risus
          li(class="list-group-item") Porta ac consectetur ac
          li(class="list-group-item") Vestibulum at eros

        
      //- price
      div(class="form-group")
        label(for="price") Price
        input.form-control(type="text", name="price", value=tour.price)
      
      button(type="submit", class="btn btn-primary").
        Submit