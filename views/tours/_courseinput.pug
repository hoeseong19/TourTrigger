button(type="button" class="btn btn-primary mb-3" data-toggle="modal" data-target="#course") ADD COURSE


form(action=`${tour._id}/course`, method="POST")
  div(class="modal fade" id="course" tabindex="-1" role="dialog" aria-labelledby="courseTitle" aria-hidden="true") 
    div(class="modal-dialog modal-dialog-scrollable modal-xl" role="document") 
      div(class="modal-content") 
        div(class="modal-header") 
          h5(class="modal-title" id="courseTitle") Course
          button(type="button" class="close" data-dismiss="modal" aria-label="Close") 
            span(aria-hidden="true") &times;
          
        
        div(class="modal-body")
          //- title
          div(class="form-group")
            label(for="title") Title
            input.form-control(type="text", name="coursetitle")
          
          //- required_time
          div(class="form-group")
            label(for="required_time") Required Time
            input.form-control(type="number", name="courserequired_time")

          //- description
          div(class="form-group")
            label(for="description") Description
            textarea.form-control(class="summernote", name="coursedescription", rows="5")

          #map

          //- latitude
          div(class="form-group d-none")
            label(for="courselat") Latitude
            input#maplat.form-control(type="text", name="courselat")

          //- longtitude
          div(class="form-group d-none")
            label(for="courselng") Longtitude
            input#maplng.form-control(type="text", name="courselng")
        
        div(class="modal-footer") 
          button(type="button" class="btn btn-secondary" data-dismiss="modal") Close
          button(type="submit" class="btn btn-primary") Save changes