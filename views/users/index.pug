extends ../layout

include ../includes/_pagination

block content
  .container.my-5
    each user in users.docs
      a(href=`/users/${user._id}`)
        div(class="card user my-3") 
          h5(class="card-header")= user.email
          div(class="card-body") 
            p(class="card-text") group: !{user.group}
            a(class="btn btn-outline-secondary mr-1 admin" href='#' role="button")  #[i(class="far fa-edit")] Edit
            a(class="btn btn-outline-danger mr-1" href='#' role="button")  #[i(class="far fa-trash-alt")] Delete
    +pagination(users, '/users')