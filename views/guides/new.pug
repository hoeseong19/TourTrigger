extends ../layout

block content
  .container.my-5
    form(action="/guides", method="POST")
      //- image
      div(class="form-group")
        label(for="image") Image
        input.form-control(type="file", name="image")

      //- name
      div(class="form-group") 
        label(for="name") name
        input(type="text", class="form-control", autocomplete="off", placeholder="name", name="name") 
      
      //- description
      div(class="form-group")
        label(for="description") Description
        textarea.form-control(class="summernote", name="description", rows="5")= guide.description
            
      //- city
      div(class="form-group") 
        label(for="city") city
        input(type="text", class="form-control", autocomplete="off", placeholder="city", name="city") 

      button(type="submit", class="btn btn-primary") Submit