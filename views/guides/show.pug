extends ../layout

block content
  .container.my-5
    button(type="button", href='#', class="btn btn-outline-secondary float-right") #[i(class="far fa-edit")] Edit 

    .clearfix.mb-4

    #profile
      img(src= guide.image, class="mx-auto w-25 h-25")
      .mx-auto !{guide.city}
      .clearfix.my-4

    .clearfix.my-4
      
    .py-5 !{guide.description}

    .clearfix.my-4
      
    h3 개설한 여행
    a(role="button", href='/tours/new', class="btn btn-outline-primary btn-block mb-3") #[i(class="fas fa-plus")] NEW 

    each tour in tours
      include ../includes/_tourcard
      a(role="button", href=`/tours/${tour._id}/edit`, class="btn btn-outline-secondary mr-1") #[i(class="fas fa-edit")] EDIT 
      a(class="btn btn-outline-danger mr-1" href=`/tours/${tour._id}?_method=delete` role="button")  #[i(class="far fa-trash-alt")] Delete